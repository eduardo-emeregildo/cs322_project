#:kivy 1.0.7


<NotificationSUPage>:

# this page will show information about new join requests

    rows: 2
    cols: 1
    name: "requests"


    canvas.before:
        Color:
            rgba : 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
# join

    RelativeLayout:

        Label:
            text: "Notifications\n"
            color: 0.2, 0.5, 0.4, 1
            font_size: "30sp"
            bold: False
            font_name: "Arial"
            pos_hint: {"center_x": 0.2, "center_y": 0.9}

# new request, compliments and warnings           

        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 1.3}

            Button:
                id: b1
                text: "New Requests"
                background_color: (0.2, 0.5, 0.4, 1)
                size_hint: (0.20, 0.08)

            Button:
                text: "Compliments"
                background_color: (0.2, 0.5, 0.4, 0.5)
                size_hint: (0.20, 0.08)
                on_press:  app.root.current = "compliments"

            Button:
                text: "Warnings"
                background_color: (0.2, 0.5, 0.4, 0.5)
                size_hint: (0.20, 0.08)
                on_press:  app.root.current = "warnings"

            Button:
                text: "Group Notifications"
                background_color: (0.2, 0.5, 0.4, 0.5)
                size_hint: (0.20, 0.08)
                on_press:  app.root.current = "GroupNotificationsSU"

# need a function to connect the description window with the user number with all related info

# name and info 1
        
        BoxLayout:
            orientation: 'horizontal'

            Label:
                text: root.person1
                color: 0.2, 0.5, 0.4, 1
                font_size: "20sp"
                bold: False
                font_name: "Arial"
                pos_hint: {"center_x": 0.25, "center_y": 0.725}

            BoxLayout:
                pos_hint: {'center_x': 0.5, 'center_y': 1.15}
                padding: 30

                Button:
                    text: "Accept"
                    background_color: (0.2, 0.5, 0.4, 1)
                    size_hint: (0.05, 0.05)
                    on_press: root.accept_btns(root.person1)
                    

                Button:
                    text: "Details"
                    background_color: (0.2, 0.5, 0.4, 1)
                    size_hint: (0.05, 0.05)
                    on_press: root.change_button(0,root.person1)
                    on_press: root.show_details(0,root.person1)
                    on_press:  if root.is_email_there(root.person1) == 1:  app.root.current = "description" 



