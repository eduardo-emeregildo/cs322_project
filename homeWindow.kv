#:kivy 1.0.7

<HomeWindow>:
    
    name: "home"
    rows: 3
    cols: 1
    spacing: '20dp'


    RelativeLayout:
        canvas.before:
            Color:
                rgba : 0, 1, 0, 1

        Button:
            text: "Login"
            font_size: "20sp"
            background_color: (1, 0.5, 0.6, 1)
            color: (1, 1, 1, 1)
            size_hint: (0.20, 0.1)
            pos_hint: {"top": 1 , "left" : 1}
            on_press:  app.root.current = "homeOU"
            

        Button:
            text: "Sign Up"
            font_size: "20sp"
            background_color: (1, 0.8, 1, 1)
            color: (1, 1, 1, 1)
            size_hint: (0.2, 0.1)
            pos_hint: {"top" : 1, "right" : 1}
            on_press:  app.root.current = "signup"
            

        Label:
            text : "Email:"
            pos_hint: {"y": .315, "x": -.28}

        TextInput:
            text: "Email"
            on_touch_down: self.text = ''
            multiline: False
            font_size: "20sp"
            background_color: (1, 1, 1, 0.5)
            color: (1, 1, 1, 1)
            size_hint: (0.50, 0.05)
            pos_hint: {"y": .79, "x": .25}

        Label:
            text : "Password:"
            pos_hint: {"y": .255, "x": -.3}

        TextInput:
            text: "Password"
            on_touch_down: self.text = ''
            multiline: False
            font_size: "20sp"
            background_color: (1, 1, 1, 0.5)
            color: (1, 1, 1, 1)
            size_hint: (0.50, 0.05)
            pos_hint: {"y": .73, "x": .25}

    FloatLayout:
        Label:
            text : "Top Projects"
            font_size: "21sp"
            pos_hint: {"y": .18, "x": .0}

        Label:
            text: "Project Name // Group Name"
            pos_hint: {"y": .12, "x": -.25}

        Label:
            text: "Description desc desc desc desc \ndesc desc desc desc desc desc desc"
            halign: 'left'
            pos_hint: {"y": .06, "x": -.20}

        Label:
            text: "Project Name 2 // Group Name 2"
            pos_hint: {"y": -.05, "x": -.238}

        Label:
            text: "Description desc desc desc desc \ndesc desc desc desc desc desc desc"
            pos_hint: {"y": -.11, "x": -.20}

        Label:
            text : "Top Users"
            font_size: "21sp"
            pos: (0, -150)

    BoxLayout:
        spacing: '10dp'
        pos_hint: {"y": .1, "x": .1}
        size_hint: (0.8, 0.9)

        Button:
            text: "User1"
            background_color: (1, 0.5, 0.6, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User2"
            background_color: (1, 0.5, 0.6, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User3"
            background_color: (1, 0.5, 0.6, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User4"
            background_color: (1, 0.5, 0.6, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User5"
            background_color: (1, 0.5, 0.6, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User6"
            background_color: (1, 0.5, 0.6, 1)
            size_hint: (0.20, 0.1)