#:kivy 1.0.7

<HomeWindow>:
    name: "home"
    rows: 3
    cols: 1
    spacing: '20dp'


    RelativeLayout:
        canvas.before:
            Color:
                rgba : 0, 1, 0, 1

        Button:
            text: "Login"
            font_size: "20sp"
            background_color: (1, 0.5, 0.6, 1)
            color: (1, 1, 1, 1)
            size_hint: (0.20, 0.1)
            pos_hint: {"top": 1 , "left" : 1}
            

        Button:
            text: "Sign Up"
            font_size: "20sp"
            background_color: (1, 0.8, 1, 1)
            color: (1, 1, 1, 1)
            size_hint: (0.2, 0.1)
            pos_hint: {"top" : 1, "right" : 1}
            on_press:  app.root.current = "signup"
            

        Label:
            text : "Email: "
            pos: (-220, 160)

        TextInput:
            text: "Email"
            on_touch_down: self.text = ''
            multiline: False
            font_size: "20sp"
            background_color: (1, 1, 1, 0.5)
            color: (1, 1, 1, 1)
            size_hint: (0.50, 0.05)
            pos: (200, 450)

        Label:
            text : "Password: "
            pos: (-235, 125)

        TextInput:
            text: "Password"
            on_touch_down: self.text = ''
            multiline: False
            font_size: "20sp"
            background_color: (1, 1, 1, 0.5)
            color: (1, 1, 1, 1)
            size_hint: (0.50, 0.05)
            pos: (200, 420)

    FloatLayout:
        Label:
            text : "Top Projects "
            pos: (0, 100)

        Label:
            text: "Project Name"
            pos: (-250, 80)

        Label:
            text: "Description desc desc desc desc \n desc desc desc desc desc desc desc"
            halign: 'left'
            pos: (0, 55)

        Label:
            text: "Group Name"
            pos: (200, 25)



        Label:
            text: "Project Name"
            pos: (-250,0)

        Label:
            text: "Description desc desc desc desc \n desc desc desc desc desc desc desc"
            halign: 'left'
            pos: (0, -30)

        Label:
            text: "Group Name"
            pos: (200, -50)

        Label:
            text : "Top Users "
            pos: (0, -150)

    BoxLayout:
        Button:
            text: "User4"
            background_color: (1, 0.5, 0.6, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User1"
            background_color: (1, 0.5, 0.6, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User2"
            background_color: (1, 0.5, 0.6, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User3"
            background_color: (1, 0.5, 0.6, 1)
            size_hint: (0.20, 0.1)


