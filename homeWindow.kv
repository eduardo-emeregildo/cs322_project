#:kivy 1.0.7

<HomeWindow>:
    
    name: "home"
    rows: 4
    cols: 1
    spacing: '20dp'


    RelativeLayout:
        canvas.before:
            Color:
                rgba : 0, 1, 0, 1


        Label:
            text : "Email:"
            font_size: "18dp"
            pos_hint: {"y": .4, "x": -.315}

        TextInput:
            hint_text: "Email"
            multiline: False
            background_color: (1, 1, 1, 1)
            color: (1, 1, 1, 1)
            size_hint: (0.55, 0.055)
            pos_hint: {"y": .88, "x": .25}

        Label:
            text : "Password:"
            font_size: "18dp" 
            pos_hint: {"y": .35, "x": -.335}

        TextInput:
            hint_text: "Password"
            multiline: False
            background_color: (1, 1, 1, 1)
            color: (1, 1, 1, 1)
            size_hint: (0.55, 0.055)
            pos_hint: {"y": .82, "x": .25}

        
    BoxLayout:

        pos_hint: {"center_x" : 0.5 , "center_y" : 1.1}
        padding : 80

        Button:
            text: "Login"
            font_size: "20sp"
            background_color: (0.2, 0.5, 0.4, 1)
            color: (1, 1, 1, 1)
            size_hint: (0.20, 0.08)
            on_press:  app.root.current = "homeOU"
            

        Button:
            text: "Sign Up"
            font_size: "20sp"
            background_color: (0.2, 0.5, 0.4, 1)
            color: (1, 1, 1, 1)
            size_hint: (0.2, 0.08)
            on_press:  app.root.current = "signup"

    FloatLayout:
        Label:
            text : "Top Projects"
            font_size: "21sp"
            pos_hint: {"y": .18, "x": .0}

        Label:
            text: "Project Name // Group Name"
            pos_hint: {"y": .12, "x": -.25}

        Label:
            text: "Description desc desc desc desc \ndesc desc desc desc desc desc desc"
            halign: 'left'
            pos_hint: {"y": .06, "x": -.20}

        Label:
            text: "Project Name 2 // Group Name 2"
            pos_hint: {"y": -.05, "x": -.238}

        Label:
            text: "Description desc desc desc desc \ndesc desc desc desc desc desc desc"
            pos_hint: {"y": -.11, "x": -.20}

        Label:
            text : "Top Users"
            font_size: "21sp"
            pos: (0, -150)

    BoxLayout:
        spacing: '10dp'
        pos_hint: {"y": .1, "x": .1}
        size_hint: (0.8, 0.9)

        Button:
            text: "User1"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User2"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User3"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User4"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User5"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User6"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.1)