#:kivy 1.0.7

<HomeOUWindow>:
    name: "homeOU"
    rows: 4
    cols: 1

    spacing: '20dp'

    RelativeLayout:
        Button:
            text: "Pic"
            size_hint: (0.1, 0.1)
            pos_hint: {"y": .85, "x": .3}

        Label:
            text : "EMAIL"
            pos_hint: {"y": .415, "x": .0}
            

        Label:
            text : "priv" +  "// " + "points"
            pos_hint: {"y": .385, "x": .0}
            id: priv_and_points_label

        BoxLayout:
            padding: [50, 10, 50, 10]
            spacing: 10
            pos_hint: {"y": .75, "x": .1}
            size_hint: (0.8, 0.3)

            Button:
                text: "PROFILE"
                background_color: (0.2, 0.5, 0.4, 1)
                size_hint: (0.08, 0.2)
                on_press:  app.root.current = "profile"
            Button:
                text: "NOTIFICATIONS"
                background_color: (0.2, 0.5, 0.4, 1)
                size_hint: (0.08, 0.2)
                on_press:  app.root.current = "requests"

    FloatLayout:
        Label:
            text : "Top Projects"
            font_size: "21sp"
            pos_hint: {"y": .18, "x": .0}

        Label:
            text: "Project Name // Group Name"
            pos_hint: {"y": .12, "x": -.25}

        Label:
            text: "Description desc desc desc desc \ndesc desc desc desc desc desc desc"
            halign: 'left'
            pos_hint: {"y": .06, "x": -.20}

        Label:
            text: "Project Name 2 // Group Name 2"
            pos_hint: {"y": -.05, "x": -.238}

        Label:
            text: "Description desc desc desc desc \ndesc desc desc desc desc desc desc"
            pos_hint: {"y": -.11, "x": -.20}

        Label:
            text : "Top Users"
            font_size: "21sp"
            pos: (0, -150)

    BoxLayout:
        spacing: '10dp'
        pos_hint: {"y": .12, "x": .1}
        size_hint: (0.8, 0.9)

        Button:
            text: "User1"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User2"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User3"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User4"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User5"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.1)
        Button:
            text: "User6"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.1)

    BoxLayout:
        Button:
            text: "Log Out"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.2, 0.06)
            on_press:root.log_out_btn()
            on_press:  app.root.current = "home"