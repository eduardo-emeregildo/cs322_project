#:kivy 1.0.7

<CreateGroupWindow>:
    rows: 4
    cols: 1
    name: "creategroup"

    groupDesc: groupDesc
    groupName: groupName
    userList: userList

    RelativeLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        size_hint: 1, 0.45

        Label:
            text: "Create New Group\n"
            color: 0.2, 0.5, 0.4, 1
            font_size: "35sp"
            bold: False
            font_name: "Arial"
            pos_hint: {"center_x": 0.2, "center_y": 0.95}

    RelativeLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.685}
        size_hint: 1, 0.45

        Label:
            text : "Group Name:"
            halign: "right"
            font_size: "20sp"
            color: 0.2, 0.5, 0.4, 1
            pos_hint: {"center_x": 0.22, "center_y": 0.79}

        TextInput:
            hint_text: "Group Name"
            hint_text_color: (0.2, 0.5, 0.4, 1)
            multiline: False
            font_size: "20sp"
            background_color: (1, 1, 1, 1)
            color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.60, 0.14)
            pos_hint: {"center_x": 0.60, "center_y": 0.78}
            id: groupName

        Label:
            text : "Group Description: "
            halign: "left"
            font_size: "20sp"
            color: 0.2, 0.5, 0.4, 1
            pos_hint: {"center_x": 0.193, "center_y": 0.63}

        TextInput:
            hint_text: "Group Description"
            hint_text_color: (0.2, 0.5, 0.4, 1)
            multiline: True
            font_size: "20sp"
            background_color: (1, 1, 1, 1)
            color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.60, 0.34)
            pos_hint: {"center_x": 0.60, "center_y": 0.50}
            id: groupDesc

    Label:
        text: "Add Users to Group:"
        font_size: "20sp"
        color: 0.2, 0.5, 0.4, 1
        pos_hint: {"center_x": 0.179, "center_y": 0.57}

    TextInput:
        hint_text:'Separate emails with a comma'
        size_hint: (0.6, 0.15)
        pos_hint: {"center_x": 0.60, "center_y": 0.52}
        id: userList

    BoxLayout:
        Button:
            text: "Cancel"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.06)
            on_press:  app.root.current = "profile"
        Button:
            text: "Submit"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.2, 0.06)
            on_press: root.create_group()