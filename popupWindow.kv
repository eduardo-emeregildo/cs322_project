#:kivy 1.0.7

<PopupWindow>:
    size_hint: 0.5, 0.5
    input_text: input_text
    title_size: "15sp"
    title_color: 1, 1, 1, 1


    RelativeLayout:

        TextInput:
            id: input_text
            input_type: 'text'
            focus: True

            hint_text: "Start Writing"
            hint_text_color: (0, 0, 0, 0.3)
            multiline: False
            font_size: "15sp"
            background_color: (1, 1, 1, 1)
            color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.8, 0.4)
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}

        BoxLayout:
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Button:
                text: "Submit"
                background_color: (0.2, 0.5, 0.4, 1)
                size_hint: (0.2, 0.2)
                on_press: root.store() 
             

            Button:
                text: "Dismiss"
                background_color: (0.2, 0.5, 0.4, 1)
                size_hint: (0.2, 0.2)
                on_press: root.dismiss()
