#:kivy 1.0.7

<WarningPage>:

# this page will display complaints about the OUs

    rows: 2
    cols: 1
    name: "warnings"

    w1: w1
    w2: w2
    w3: w3
    w4: w4
    w5: w5
    w6: w6
    w7: w7

    on_pre_enter: root.update()

    canvas.before:
        Color:
            rgba : 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size


    RelativeLayout:

        Label:
            text: "Notifications\n"
            color: 0.2, 0.5, 0.4, 1
            font_size: "30sp"
            bold: False
            font_name: "Arial"
            pos_hint: {"center_x": 0.2, "center_y": 0.9}

# new request, compliments, complaints and group notification           

        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 1.3}

            Button:
                id: b1
                text: "New Requests"
                background_color: (0.2, 0.5, 0.4, 0.5)
                size_hint: (0.20, 0.07)
                on_press:  app.root.current = "requests"
            Button:
                text: "Compliments"
                background_color: (0.2, 0.5, 0.4, 0.5)
                size_hint: (0.20, 0.07)
                on_press:  app.root.current = "compliments"

            Button:
                text: "Complaints"
                background_color: (0.2, 0.5, 0.4, 1)
                size_hint: (0.20, 0.07)

            Button:
                text: "Group Notifications"
                background_color: (0.2, 0.5, 0.4, 0.5)
                size_hint: (0.20, 0.07)
                on_press:  app.root.current = "GroupNotificationsSU"


# complaint1
                
        BoxLayout:
            orientation: 'horizontal'

            Label:
                text: ""
                color: 0.2, 0.5, 0.4, 1
                font_size: "20sp"
                bold: False
                halign: 'center'
                font_name: "Arial"
                pos_hint: {"center_x": 0.25, "center_y": 0.725}
                id: w1
            
            BoxLayout:
                pos_hint: {'center_x': 0.5, 'center_y': 1.15}
                padding: 30

                Button:
                    text: "Decrease Score"
                    background_color: (0.2, 0.5, 0.4, 1)
                    size_hint: (0.05, 0.05)
                    on_press: root.show_popup0()

                Button:
                    text: "Dismiss"
                    background_color: (0.2, 0.5, 0.4, 1)
                    size_hint: (0.05, 0.05)
                    on_press: root.w1.text = "" 


