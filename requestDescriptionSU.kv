#:kivy 1.0.7

<DescriptionWindow>: 

    name: "description"
    
    



    RelativeLayout:

        space: 4
        padding: 4
        
        Label:
            text: "Detailed Information\n"
            color: 0.2, 0.5, 0.4, 1
            font_size: "30sp"
            bold: False
            font_name: "Arial"
            pos_hint: {"center_x": 0.25, "center_y": 0.9}

        

        Label:
            text: "Email: " + root.desc_email
            color: 0.2, 0.5, 0.4, 1
            font_size: "20sp"
            bold: False
            font_name: "Arial"
            pos_hint: {"center_x": 0.25, "center_y": 0.75}


        Label:
            text: "Number of Appeals: " + root.desc_appeal 
            color: 0.2, 0.5, 0.4, 1
            font_size: "20sp"
            bold: False
            font_name: "Arial"
            pos_hint: {"center_x": 0.25, "center_y": 0.65}

        Label:
            text: "Birthday: " + root.desc_birthday
            color: 0.2, 0.5, 0.4, 1
            font_size: "20sp"
            bold: False
            font_name: "Arial"
            pos_hint: {"center_x": 0.25, "center_y": 0.55}

        Label:
            text: "Interests:" + root.desc_interest
            color: 0.2, 0.5, 0.4, 1
            font_size: "20sp"
            bold: False
            font_name: "Arial"
            pos_hint: {"center_x": 0.25, "center_y": 0.45}

        Label:
            text: "Password: " + root.desc_password 
            color: 0.2, 0.5, 0.4, 1
            font_size: "20sp"
            bold: False
            font_name: "Arial"
            pos_hint: {"center_x": 0.25, "center_y": 0.35}
        
        Label:
            text: "Referrals:" + root.desc_reference
            color: 0.2, 0.5, 0.4, 1
            font_size: "20sp"
            bold: False
            font_name: "Arial"
            pos_hint: {"center_x": 0.25, "center_y": 0.25}


# go back
    BoxLayout:
        Button:
            text: "Return"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.06)
            on_press:root.return_btn()
            on_press:  app.root.current = "requests"
        Button:
            text: "Reject"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.06)
            on_press:root.reject_btn()
        Button:
            text: "Load info"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.06)
            on_press:root.update()


 