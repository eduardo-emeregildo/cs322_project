#:kivy 1.0.7

<ComplimentPage>:

# this page will show anonymous compliments about the OUs

    rows: 2
    cols: 1
    name: "compliments"

    c1: c1
    c2: c2
    c3: c3
    c4: c4
    c5: c5
    c6: c6
    c7: c7

    on_pre_enter: root.update()

    canvas.before:
        Color:
            rgba : 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

# title

    RelativeLayout:

        Label:
            text: "Notifications\n"
            color: 0.2, 0.5, 0.4, 1
            font_size: "30sp"
            bold: False
            font_name: "Arial"
            pos_hint: {"center_x": 0.2, "center_y": 0.9}

# new request, compliments, complaints and group close requests          

        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 1.3}

            Button:
                id: b1
                text: "New Requests"
                background_color: (0.2, 0.5, 0.4, 0.5)
                size_hint: (0.20, 0.07)
                on_press:  app.root.current = "requests"
            Button:
                text: "Compliments"
                background_color: (0.2, 0.5, 0.4, 1)
                size_hint: (0.20, 0.07)

            Button:
                text: "Complaints"
                background_color: (0.2, 0.5, 0.4, 0.5)
                size_hint: (0.20, 0.07)
                on_press:  app.root.current = "warnings"
            
            Button:
                text: "Group Notifications"
                background_color: (0.2, 0.5, 0.4, 0.5)
                size_hint: (0.20, 0.07)
                on_press:  app.root.current = "GroupNotificationsSU"


