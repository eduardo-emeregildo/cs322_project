#:kivy 1.0.7

<VisitorView>:
    name: "VisitorView"
    rows: 3
    cols: 1

    pic: pic
    username: username
    priv: priv


    project1: project1
    project2: project2
    project3: project3
    desc1 : desc1
    desc2 : desc2
    desc3 : desc3

    on_pre_enter: root.initialize_page()

    RelativeLayout:
        Button:
            text: "Pic"
            size_hint: (0.1, 0.1)
            pos_hint: {"y": .85, "x": .3}
            id: pic

        Label:
            text : ""
            pos_hint: {"y": .415, "x": .0}
            id: username

        Label:
            text : ""
            pos_hint: {"y": .385, "x": .0}
            id: priv



        Button:
            text: "Complain"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.15, 0.05)
            pos_hint: {"x": .75, "y": .71}
            on_press:  root.show_popup0()


    FloatLayout:
        Label:
            text : "Top Projects"
            font_size: "21sp"
            pos_hint: {"y": .18, "x": .0}
            

        Label:
            text: "Project Name // Group Name"
            pos_hint: {"y": .12, "x": -.25}
            id: project1

        Label:
            text: "Description desc desc desc desc \ndesc desc desc desc desc desc desc"
            halign: 'left'
            pos_hint: {"y": .06, "x": -.20}
            id: desc1

        Label:
            text: "Project Name 2 // Group Name 2"
            pos_hint: {"y": -.05, "x": -.238}
            id: project2

        Label:
            text: "Description desc desc desc desc \ndesc desc desc desc desc desc desc"
            pos_hint: {"y": -.11, "x": -.20}
            id: desc2

        Label:
            text: "Project Name 3 // Group Name 3"
            pos_hint: {"y": -.22, "x": -.238}
            id: project3

        Label:
            text: "Description desc desc desc desc \ndesc desc desc desc desc desc desc"
            pos_hint: {"y": -.28, "x": -.20}
            id: desc3

    BoxLayout:
        Button:
            text: "Return"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.2, 0.06)
            on_press:  root.prev_screen()