#:kivy 1.0.7

<VisitorViewLoggedIn>:
# all visitors who are logged in (system users) will see this view of the OU homepage

    name: "VisitorViewLoggedIn"
    rows: 4
    cols: 1

    pic: pic
    username: username


    project1: project1
    project2: project2
    project3: project3
    desc1 : desc1
    desc2 : desc2
    desc3 : desc3

    on_pre_enter: root.initialize_page()

    RelativeLayout:
        Button:
            text: "Pic"
            size_hint: (0.1, 0.1)
            pos_hint: {"y": .85, "x": .3}
            id: pic

        Label:
            text : ""
            pos_hint: {"y": .415, "x": .0}
            id: username

        Label:
            text : ""
            pos_hint: {"y": .385, "x": .0}
            id: priv

# options to send compliments, complain to the SU and rate a project

    BoxLayout:
        orientation: 'horizontal'
        pos_hint: { "y": 0.05, "x": 0}
        padding: 40
        spacing: 30 

        Button:
            text: "Send Compliments"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.1, 0.06)
            pos_hint: { "x": .35, "y": .71 }
            on_press:  root.show_popup1()
        
        Button:
            text: "Complain"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.1, 0.06)
            pos_hint: {"x": .55, "y": .71}
            on_press:  root.show_popup0()

        Button:
            text: "Rate a Project"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.1, 0.06)
            pos_hint: { "x": .75, "y": .71 }
            on_press:  root.show_popup2()

# user's top projects will be displayed here

    FloatLayout:
        Label:
            text : "Top Projects"
            font_size: "21sp"
            pos_hint: {"y": .18, "x": .0}
            

        Label:
            text: ""
            pos_hint: {"y": .12, "x": -.25}
            id: project1

        Label:
            text: ""
            halign: 'left'
            pos_hint: {"y": .06, "x": -.20}
            id: desc1


        
        Label:
            text: ""
            pos_hint: {"y": -.05, "x": -.238}
            id: project2

        Label:
            text: ""
            pos_hint: {"y": -.11, "x": -.20}
            id: desc2


        Label:
            text: ""
            pos_hint: {"y": -.22, "x": -.238}
            id: project3

        Label:
            text: ""
            pos_hint: {"y": -.28, "x": -.20}
            id: desc3

# return
    BoxLayout:
        Button:
            text: "Return"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.2, 0.06)
            on_press: app.root.current = "homeOU"
