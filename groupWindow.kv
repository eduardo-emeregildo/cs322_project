#:kivy 1.0.7

<GroupWindow>:
    rows: 4
    cols: 1
    name: "grouppage"

    postContent: postContent
    postButton: postButton
    groupDesc: groupDesc
    postTask1: postTask1
    postPoll1: postPoll1
    postPollVote1: postPollVote1
    btnClaim: btnClaim
    btnPoll1: btnPoll1
    btnPoll2: btnPoll2
    user1_info: user1_info
    user2_info: user2_info
    user3_info: user3_info
    user4_info: user4_info
    user5_info: user5_info

    spacing: '20dp'

    RelativeLayout:

        TextInput:
            hint_text: "Write Something..."
            multiline: True
            size_hint: (0.60, 0.14)
            pos_hint: {"top": .95, "x": 0.025}
            id: postContent

        Button:
            text: "Post Task"
            font_size: "11sp"
            size_hint: (0.08, 0.01)
            pos_hint: {"top": .78, "x": 0.545}
            id: postButton
            on_press: root.create_post("Task", 1)

        Button:
            text: "Post Poll"
            font_size: "11sp"
            size_hint: (0.08, 0.01)
            pos_hint: {"top": .78, "x": 0.455}
            id: postButton
            on_press: root.create_post("Poll", 1)

        Label:
            text: "Please vote for a time to meet up:"
            pos_hint: {"y": .20, "x": -.315}
            id: postPoll1
            canvas.before:
                Color:
                    rgba: .2, .5, .4, 1
                Rectangle:
                    pos: (20, 290)
                    size: (500, 150)
        Label:
            text: "[ 3/5 members have voted ] "
            id: postPollVote1
            color: 0.5, 0.8, 0.6, 1
            pos_hint: {"y": .16, "x": -.340}

        BoxLayout:
            size_hint: (0.6, 0.1)
            pos_hint: {"top": .60, "x": 0.036}
            spacing: '10dp'
            Button:
                text: "Option 1"
                background_color: (.2, .5, .4, 1)
                disabled: False
                id: btnPoll1
                on_press: root.poll_vote('chungha@aol.com', 5, 1, 1)
            Button:
                text: "Option 2"
                background_color: (.2, .5, .4, 1)
                disabled: False
                id: btnPoll2
                on_press: root.poll_vote('chungha@aol.com', 5, 1, 2)

        Label:
            text: "Function Name: create_group()\nDetails: function create group in database"
            pos_hint: {"center_y": .4, "center_x": .215}
            id: postTask1
            canvas.before:
                Color:
                    rgba: .2, .5, .4, 1
                Rectangle:
                    pos: (20, 190)
                    size: (500, 80)
        Button:
            text: "Claim"
            background_color: (.2, .5, .4, 1)
            size_hint: (0.07, 0.07)
            pos_hint: {"x": .57, "y": .35}
            disabled: False
            id: btnClaim
            on_press: root.task_claim('chungha@aol.com', 7, 4, 1)

        Label:
            text: "Group Name: groupName \nDescription: groupDesc"
            pos_hint: {"y": .39, "x": .315}
            id: groupDesc
            name: groupDesc

            canvas.before:
                Color:
                    rgba: .30, .5, .45, 1
                Rectangle:
                    pos: (540, 270)
                    size: (230, 300)
            Label:
                text: "Users"
                pos: (524, 412)
            Label:
                text: "Tasks"
                pos: (578, 412)
            Label:
                text: "Kick"
                pos: (696, 412)
            BoxLayout:
                orientation: 'vertical'
                pos: (550, 280)
                size: (150, 170)
                Button:
                    text: "1"
                    background_color: (.2, .5, .4, 1)
                    size_hint: (0.30, 0.3)
                    on_press: root.show_info()
                Button:
                    text: "2"
                    background_color: (.2, .5, .4, 1)
                    size_hint: (0.30, 0.3)
                    on_press: root.create_post_poll("This is the Content", "Choice 1", "Choice 2", 5)
                Button:
                    text: "3"
                    background_color: (.2, .5, .4, 1)
                    size_hint: (0.30, 0.3)
                Button:
                    text: "4"
                    background_color: (.2, .5, .4, 1)
                    size_hint: (0.30, 0.3)
                Button:
                    text: "5"
                    background_color: (.2, .5, .4, 1)
                    size_hint: (0.30, 0.3)

            BoxLayout:
                orientation: 'vertical'
                pos: (565, 280)
                size: (155, 170)
                Label:
                    text: "Assigned: 4 \nCompleted: 3"
                    font_size: "11sp"
                    id: user1_info
                Label:
                    text: "Assigned: 5 \nCompleted: 3"
                    font_size: "11sp"
                    id: user2_info
                Label:
                    text: "Assigned: 2 \nCompleted: 2"
                    font_size: "11sp"
                    id: user3_info
                Label:
                    text: "Assigned: 3 \nCompleted: 2"
                    font_size: "11sp"
                    id: user4_info
                Label:
                    text: "Assigned: 1 \nCompleted: 4"
                    font_size: "11sp"
                    id: user5_info
            BoxLayout:
                orientation: 'vertical'
                spacing: '10dp'
                pos: (735, 280)
                size: (120, 170)
                Button:
                    text: "x"
                    background_color: (.4, 1, .7, 1)
                    size_hint: (0.20, 0.20)
                    on_press: root.remove_group_user('chungha@aol.com', 5)
                Button:
                    text: "x"
                    background_color: (.4, 1, .7, 1)
                    size_hint: (0.20, 0.20)
                    on_press: root.remove_group(5)
                Button:
                    text: "x"
                    background_color: (.4, 1, .7, 1)
                    size_hint: (0.20, 0.20)
                Button:
                    text: "x"
                    background_color: (.4, 1, .7, 1)
                    size_hint: (0.20, 0.20)
                Button:
                    text: "x"
                    background_color: (.4, 1, .7, 1)
                    size_hint: (0.20, 0.20)
                    on_press: root.task_complete('chungha@aol.com', 7, 1)
        BoxLayout:
            Button:
                text: "Go Back"
                background_color: (0.2, 0.5, 0.4, 1)
                size_hint: (0.2, 0.06)
                on_press:  app.root.current = "profile"