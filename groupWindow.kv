#:kivy 1.0.7

<GroupWindow>:
    rows: 3
    cols: 1
    name: "grouppage"

    spacing: '20dp'

    RelativeLayout:

        Label:
            text: "Group Name"
            text_size: cm(20), cm(10)
            color: .2, .5, .4, 1
            font_size: "20sp"
            pos_hint: {"top": .10, "x": 0.025}

        TextInput:
            hint_text: "Write Something..."
            multiline: True
            size_hint: (0.60, 0.14)
            pos_hint: {"top": .95, "x": 0.025}

        Button:
            text: "Post"
            font_size: "11sp"
