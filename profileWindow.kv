            pos_hint: {"x": .215, "y": -.255}

        TextInput:
            hint_text:'Add or Remove User'
            size_hint: (0.235, 0.05)
            pos_hint: {"x": .538, "y": .17}
            id: text_input2

        Button:
            text: "+"
            background_color: (.2, .5, .4, 1)
