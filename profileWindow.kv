#:kivy 1.0.7

<ProfileWindow>:
    name: "profile"

    w1: w1

    g1: g1
    g2: g2
    g3: g3
    g4: g4
    g5: g5

    input_text: input_text
    text_input2: text_input2


    priv: priv
    username: username
    pic: pic

    b1: b1
    b2: b2
    b3: b3
    b4: b4

    b5: b5
    b6: b6
    b7: b7
    b8: b8

    on_pre_enter: root.update()

    RelativeLayout:
        pos_hint: {"center_x" : 0.5, "center_y" : 0.575}

        Button:
            text: "Pic"
            size_hint: (0.1, 0.1)
            pos_hint: {"x": .3, "y": .8}
            id: pic

        Label:
            text : "USERNAME"
            pos_hint: {"x": .0, "y": .37}
            id: username

        Label:
            text : "OU // +19 points"
            pos_hint: {"x": .0, "y": .33}
            id: priv

        Label:
            text: "Groups"
            font_size: "21sp"
            pos_hint: {"x": -.36, "y": .23}

        Button:
            text: "+ Create Group"
            background_color: (.1, .6, .3, 1)
            size_hint: (0.15, 0.05)
            pos_hint: {"x": .75, "y": .71}
            on_press:  app.root.current = "creategroup"

        BoxLayout:
            spacing: 10
            pos_hint: {"x": .1, "y": .6}
            size_hint: (0.8, 0.5)
            Button:
                text: "Group1"
                background_color: (.2, .5, .4, 1)
                size_hint: (0.20, 0.2)
                id: g1
                on_press:  if self.text != "" : root.get_groupname(self.text)
            Button:
                text: "Group2"
                background_color: (.2, .5, .4, 1)
                size_hint: (0.20, 0.2)
                id: g2
                on_press:  if self.text != "" : app.root.current = "grouppage"
            Button:
                text: ""
                background_color: (.2, .5, .4, 1)
                size_hint: (0.20, 0.2)
                id: g3
                on_press:  if self.text != "" : app.root.current = "grouppage"
            Button:
                text: "Group4"
                background_color: (.2, .5, .4, 1)
                size_hint: (0.20, 0.2)
                id: g4
                on_press:  if self.text != "" : app.root.current = "grouppage"
            Button:
                text: "Group5"
                background_color: (.2, .5, .4, 1)
                size_hint: (0.20, 0.2)
                id: g5
                on_press:  if self.text != "" : app.root.current = "grouppage"

        Label:
            text: "Group1Name"
            halign: 'center'
            size: self.size
            pos_hint: {"x": -.325, "y": .075}
        Label:
            text: "Group2Name"
            halign: 'center'
            pos_hint: {"x": -.1625, "y": .075}
        Label:
            text: "Group3Name"
            halign: 'center'
            pos_hint: {"x": .00, "y": .075}
        Label:
            text: "Group4Name"
            halign: 'center'
            pos_hint: {"x": .1625, "y": .075}
        Label:
            text: "Group5Name"
            halign: 'center'
            pos_hint: {"x": .325, "y": .075}

        Label:
            text: "Warnings"
            font_size: "21sp"
            pos_hint: {"x": -.345, "y": .0}
            canvas.before:
                Color:
                    rgba: .2, .5, .4, 1
                Rectangle:
                    pos: (80,210)
                    size: (640, 73)
        Label:
            text: "1: Said Taboo Word"
            halign: 'left'
            size: self.size
            pos_hint: {"x": -.236, "y": -.09}
            id: w1


        Label:
            text: "White Box"
            font_size: "21sp"
            pos_hint: {"x": -.345, "y": -.20}
            canvas.before:
                Color:
                    rgba: .2, .5, .4, 1
                Rectangle:
                    pos: (80,10)
                    size: (300, 152)
        Label:
            text: "(Users you automatically accept group requests from)"
            font_size: "11sp"
            pos_hint: {"x": -.211, "y": -.255}

        TextInput:
            hint_text:'Add or Remove User'
            size_hint: (0.235, 0.05)
            pos_hint: {"x": .113, "y": .17}
            id: input_text

        Button:
            text: "+"
            background_color: (.2, .5, .4, 1)
            size_hint: (0.05, 0.05)
            pos_hint: {"x": .355, "y": .17}
            id: add
            on_press: root.add_toList( root.username.text, root.input_text.text, 2)

        Button:
            text: "-"
            background_color: (.2, .5, .4, 1)
            size_hint: (0.05, 0.05)
            pos_hint: {"x": .41, "y": .17}
