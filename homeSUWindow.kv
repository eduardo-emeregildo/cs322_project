#:kivy 1.0.7

<HomeSUWindow>:
    name: "homeSU"
    rows: 4
    cols: 1

    spacing: '20dp'


    pic: pic
    username: username
    points: points

    project1: project1
    project2: project2
    project3: project3
    desc1 : desc1
    desc2 : desc2
    desc3 : desc3

    user1: user1
    user2: user2
    user3: user3
    user4: user4
    user5: user5
    user6: user6

    on_pre_enter: root.initialize_page()

    RelativeLayout:
        Button:
            text: "Pic"
            size_hint: (0.1, 0.1)
            pos_hint: {"y": .85, "x": .3}
            id: pic

        Label:
            text : "USERNAME"
            pos_hint: {"y": .415, "x": .0}
            id: username

        Label:
            text : "SU // +19 points"
            pos_hint: {"y": .385, "x": .0}
            id: points


        Label:
            text : "WELCOME TO THE SYSTEM"
            pos_hint: {"y": .3, "x": .0}
            font: '40dp'
            bold: True
            font_name: "Arial"


        Button:
            text: "NOTIFICATIONS"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.2, 0.05)
            pos_hint: {"x": .75, "y": .71}
            on_press: app.root.current = "requests"

    FloatLayout:

        Label:
            text : "Top Projects"
            font_size: "21sp"
            pos_hint: {"y": .18, "x": .0}

        Label:
            text: ""
            pos_hint: {"y": .12, "x": -.25}
            color: 1, 1, 0, 1
            font: "20sp"
            id: project1

        Label:
            text: ""
            halign: 'left'
            pos_hint: {"y": .06, "x": -.20}
            id: desc1

        Label:
            text: ""
            pos_hint: {"y": 0, "x": -.238}
            color: 1, 1, 0, 1
            font: "20sp"
            id: project2


        Label:
            text: ""
            pos_hint: {"y": -.06, "x": -.20}
            id: desc2

        Label:
            text: ""
            pos_hint: {"y": -.12, "x": -.238}
            color: 1, 1, 0, 1
            font: "20sp"
            id: project3

        Label:
            text: ""
            pos_hint: {"y": -.18, "x": -.20}
            id: desc3

        Label:
            text : "Top Users"
            font_size: "21sp"
            pos: (0, -150)

    BoxLayout:
        spacing: '10dp'
        pos_hint: {"y": .12, "x": .1}
        size_hint: (0.8, 0.9)

        Button:
            text: "User1"
            background_color: (0.2, 0.5, 0.4, 1)
            color: 1, 1, 0, 1
            size_hint: (0.20, 0.1)
            #on_press: app.root.current = "VisitorView"
            on_press: root.switch_screen(self.text)
            id: user1

        Button:
            text: "User2"
            background_color: (0.2, 0.5, 0.4, 1)
            color: 1, 1, 0, 1
            size_hint: (0.20, 0.1)
            #on_press: app.root.current = "VisitorView"
            on_press: root.switch_screen(self.text)
            id: user2

        Button:
            text: "User3"
            background_color: (0.2, 0.5, 0.4, 1)
            color: 1, 1, 0, 1
            size_hint: (0.20, 0.1)
            #on_press: app.root.current = "VisitorView"
            on_press: root.switch_screen(self.text)
            id: user3

        Button:
            text: "User4"
            background_color: (0.2, 0.5, 0.4, 1)
            color: 1, 1, 0, 1
            size_hint: (0.20, 0.1)
            #on_press: app.root.current = "VisitorView"
            on_press: root.switch_screen(self.text)
            id: user4

        Button:
            text: "User5"
            background_color: (0.2, 0.5, 0.4, 1)
            color: 1, 1, 0, 1
            size_hint: (0.20, 0.1)
            #on_press: app.root.current = "VisitorView"
            on_press: root.switch_screen(self.text)
            id: user5

        Button:
            text: "User6"
            background_color: (0.2, 0.5, 0.4, 1)
            color: 1, 1, 0, 1
            size_hint: (0.20, 0.1)
            #on_press: app.root.current = "VisitorView"
            on_press: root.switch_screen(self.text)
            id: user6

    BoxLayout:
        Button:
            text: "Log Out"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.2, 0.06)
            on_press:  app.root.current = "home"