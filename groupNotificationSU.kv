#:kivy 1.0.7

<GroupNotificationSU>:


    rows: 2
    cols: 1
    name: "GroupNotificationsSU"
    

    canvas.before:
        Color:
            rgba : 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
# join

    RelativeLayout:

        Label:
            text: "Group Notifications\n"
            color: 0.2, 0.5, 0.4, 1
            font_size: "30sp"
            bold: False
            font_name: "Arial"
            pos_hint: {"center_x": 0.2, "center_y": 0.9}


# new request, compliments and warnings           

        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 1.3}

            Button:
                id: b1
                text: "New Requests"
                background_color: (0.2, 0.5, 0.4, 0.5)
                size_hint: (0.20, 0.08)
                on_press:  app.root.current = "requests"

            Button:
                text: "Compliments"
                background_color: (0.2, 0.5, 0.4, 0.5)
                size_hint: (0.20, 0.08)
                on_press:  app.root.current = "compliments"

            Button:
                text: "Warnings"
                background_color: (0.2, 0.5, 0.4, 0.5)
                size_hint: (0.20, 0.08)
                on_press:  app.root.current = "warnings"

            Button:
                text: "Group Notifications"
                background_color: (0.2, 0.5, 0.4, 1)
                size_hint: (0.20, 0.08)
                



# need a function to connect the description window with the user number with all related info

