#:kivy 1.0.7

<VipNotifications>:
    name: "vipNotifications"
    rows: 4
    cols: 1
    spacing: '20dp'

    titleLabel1: titleLabel1
    titleLabel2: titleLabel2
    titleLabel3: titleLabel3

    detailLbl1: detailLbl1
    detailLbl2: detailLbl2
    detailLbl3: detailLbl3

    btnAce1: btnAce1
    btnAce2: btnAce2
    btnAce3: btnAce3

    inpScore1: inpScore1

# join
    RelativeLayout:

        Label:
            text: "VIP Notifications\n"
            color: 0.2, 0.5, 0.4, 1
            font_size: "30sp"
            bold: False
            font_name: "Arial"
            pos_hint: {"center_x": 0.3, "center_y": 0.9}


# new request, compliments and warnings
        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5, 'center_y': 1.3}

            Button:
                text: "VIP Notifications"
                background_color: (0.2, 0.5, 0.4, 1)
                size_hint: (0.20, 0.08)

            Button:
                text: "Task/Group Requests"
                background_color: (0.2, 0.5, 0.4, 1)
                size_hint: (0.20, 0.08)
                on_release: app.root.current = "tasksNotifications"

# Close Request
        BoxLayout:
            orientation: 'horizontal'

            GridLayout:
                rows: 2
                cols: 2
                spacing: '10dp'
                padding: 30
                size_hint: (0.5, 0.3)
                pos_hint: {"center_x": 0.00, "center_y": 0.70}
                Label:
                    text: "No Group to Display"
                    color: 0.2, 0.5, 0.4, 1
                    font_size: "20sp"
                    bold: False
                    font_name: "Arial"
                    id: titleLabel1

                BoxLayout:
                    size_hint: (0.55, 0.1)
                    spacing: '5dp'
                    TextInput:
                        hint_text: "(EX: -3 or 3)"
                        font_size: "13sp"
                        size_hint: (0.3, .5)
                        id: inpScore1
                    Button:
                        text: "Submit Score"
                        font_size: "13sp"
                        background_color: (0.02, 0.024, 0.494, 1)
                        size_hint: (0.5, .5)
                        id: btnAce1
                        on_release: root.assign_score(1)

                Label:
                    text: "[ DETAILS ]   Wait for SU to assign a group!"
                    font_size: "12sp"
                    opacity: 1
                    id: detailLbl1

        BoxLayout:
            orientation: 'horizontal'

            GridLayout:
                rows: 2
                cols: 2
                spacing: '10dp'
                padding: 30
                size_hint: (0.37, 0.3)
                pos_hint: {"center_x": 0.00, "center_y": 0.470}
                Label:
                    text: "No Group to Display"
                    color: 0.2, 0.5, 0.4, 1
                    font_size: "20sp"
                    bold: False
                    font_name: "Arial"
                    id: titleLabel2

                BoxLayout:
                    size_hint: (0.55, 0.2)
                    spacing: '5dp'
                    TextInput:
                        hint_text: "(EX: -3 or 3)"
                        font_size: "13sp"
                        size_hint: (0.3, .5)
                        id: inpScore1
                    Button:
                        text: "Submit Score"
                        font_size: "13sp"
                        background_color: (0.02, 0.024, 0.494, 1)
                        size_hint: (0.5, .5)
                        id: btnAce2
                        on_release: root.assign_score(2)

                Label:
                    text: "[ DETAILS ]   Wait for SU to assign a group!"
                    font_size: "12sp"
                    opacity: 1
                    id: detailLbl2

        BoxLayout:
            orientation: 'horizontal'

            GridLayout:
                rows: 2
                cols: 2
                spacing: '10dp'
                padding: 30
                size_hint: (0.37, 0.3)
                pos_hint: {"center_x": 0.00, "center_y": 0.230}
                Label:
                    text: "No Group to Display"
                    color: 0.2, 0.5, 0.4, 1
                    font_size: "20sp"
                    bold: False
                    font_name: "Arial"
                    id: titleLabel3

                BoxLayout:
                    size_hint: (0.55, 0.2)
                    spacing: '5dp'
                    TextInput:
                        hint_text: "(EX: -3 or 3)"
                        font_size: "13sp"
                        size_hint: (0.3, .5)
                        id: inpScore1
                    Button:
                        text: "Submit Score"
                        font_size: "13sp"
                        background_color: (0.02, 0.024, 0.494, 1)
                        size_hint: (0.5, .5)
                        id: btnAce3
                        on_release: root.assign_score(3)

                Label:
                    text: "[ DETAILS ]   Wait for SU to assign a group!"
                    font_size: "12sp"
                    opacity: 1
                    id: detailLbl3


# go back
    BoxLayout:
        Button:
            text: "Cancel"
            background_color: (0.2, 0.5, 0.4, 1)
            size_hint: (0.20, 0.06)
            on_press:  app.root.current = "home"